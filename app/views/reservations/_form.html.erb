<%= form_for(@reservation, url: listing_reservations_path(@listing)) do |form| %>

<div class="start_date-field">
    <%= form.label :start_date %>
    <%= form.date_field :start_date %>
</div>

<div class="end_date-field">
    <%= form.label :end_date %>
    <%= form.date_field :end_date %>
</div>

<div class="num_guest-field">
    <%= form.label :num_guest %>
    <%= form.number_field :num_guest %>
</div>

<div class="actions">
    <%= form.submit %>
</div>

<% end %>